  "description": "PHP library to use Digicel MonCash",

  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Fruitsbytes\\PHP\\MonCash\\": "src/",
      "Fruitsbytes\\PHP\\MonCash\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Jeffrey N. Carre",
      "email": "jeffrey.carre@anbapyezanman.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "vlucas/phpdotenv": "^5.5",
    "giggsey/libphonenumber-for-php": "^8.12",
    "ramsey/uuid": "^4.5",
    "ext-openssl": "*",
    "ext-json": "*",
    "ext-bcmath": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.26",
    "jetbrains/phpstorm-attributes": "^1.0"
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit"
